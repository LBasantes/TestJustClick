<style>
  .TablaPrincipal{
    width: 100%; 
    text-align: center;
    background: black;
  }

  .TablaCabecera{
    background-color: aliceblue;
  }

  .TablaCuerpo{
    background-color: white;
  }

  td {
      padding: 2px;
  }

  th {
    padding-bottom: 0px;
    padding: 2px;
  }
</style>

<p id="notice"><%= notice %></p>

<h1>Productos</h1>

<table class="TablaPrincipal">
  <thead class="TablaCabecera">
    <tr>
      <th>Nombre</th>
      <th>Color</th>
      <th>Categoria</th>
      <th>Tama√±o</th>
      <th>Precio</th>
      <th>Tienda</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody class="TablaCuerpo">
    <% @products.each do |product| %>
      <tr>
        <td><%= product.Name %></td>
        <td><%= product.Color %></td>
        <td><%= product.Category %></td>
        <td><%= product.Size %></td>
        <td><%= product.Price %></td>
        <td><%= product.Store %></td>
        <td><%= link_to 'Ver', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'Seguro de Elimnar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo', new_product_path %>
<%= link_to 'Atras', "../" %>
